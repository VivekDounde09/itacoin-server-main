{
  "name": "itacoin",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "itacoin",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "prisma generate && npm run typechain",
    "prebuild": "rimraf dist && prisma generate",
    "build": "nest build",
    "pretypechain": "rimraf src/ledger/contracts/typechain",
    "typechain": "typechain --target=ethers-v6 --out-dir src/ledger/contracts/typechain 'src/ledger/contracts/abi/*.json'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint",
    "test": "jest --onlyChanged",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --onlyChanged --config ./test/jest-e2e.json",
    "prod:db": "docker compose up -d postgres redis",
    "prod:db:stop": "docker compose stop postgres redis",
    "dev:db": "docker compose -f docker-compose.dev.yaml up -d postgres redis",
    "dev:db:stop": "docker compose -f docker-compose.dev.yaml stop postgres redis",
    "dev:pgadmin": "docker compose -f docker-compose.dev.yaml up -d pgadmin",
    "dev": "docker compose -f docker-compose.dev.yaml up --build --attach itacoin",
    "dev:stop": "docker compose -f docker-compose.dev.yaml down",
    "prod": "docker compose up -d --build itacoin",
    "prod:stop": "docker compose stop itacoin",
    "db:studio": "prisma studio",
    "db:init": "npm run db:schema:push && npm run db:schema:constraints && npm run db:seed",
    "db:seed": "prisma db seed",
    "db:seed:only": "prisma db seed -- --seed-only",
    "db:schema:constraints": "ts-node prisma/constraints.ts",
    "db:schema:push": "prisma db push",
    "db:schema:format": "prisma format",
    "db:schema:validate": "prisma validate",
    "db:client:generate": "prisma generate",
    "db:migration:create": "prisma migrate dev --create-only",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset --skip-seed",
    "postdb:migrate:reset": "npm run db:init",
    "db:migrate:deploy": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@cryptapi/api": "^1.0.2",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/bullmq": "^10.0.1",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/schedule": "^3.0.1",
    "@prisma/client": "^5.6.0",
    "@typechain/ethers-v6": "^0.5.1",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "bullmq": "^4.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commander": "^11.1.0",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.9",
    "ejs": "^3.1.9",
    "ethers": "^6.8.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.6",
    "nestjs-i18n": "^10.3.7",
    "node-telegram-bot-api": "^0.64.0",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qs": "^6.11.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "sharp": "^0.32.6",
    "svg-captcha": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.3",
    "@types/commander": "^2.12.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.6",
    "@types/node-telegram-bot-api": "^0.63.1",
    "@types/nodemailer": "^6.4.9",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "prisma": "^5.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@Common": "<rootDir>/common/index",
      "^@Config": "<rootDir>/configs/index"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
